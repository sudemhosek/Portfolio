@model Proje1Portfolio.Models.messagetbl
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@Html.Action("pertialhead", "Default")

<body>

    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Navbar Start -->
    @Html.Action("pertialnavbar", "default")
    <!-- Navbar End -->
    <!-- Header Start -->
    @Html.Action("pertialnavbar", "default")
    <!-- Header End -->
    @Html.Action("partialheader", "default")
    <!-- About Start -->
    @Html.Action("partialabout", "default")
    <!-- About End -->
    <!-- Education Start -->
    @Html.Action("partialeducationt", "default")
    <!-- Education End -->
    <!-- Experience Start -->
    @Html.Action("partialExperience", "default")
    <!-- Exparience End -->
    <!-- Skills Start -->
    @Html.Action("partialskill", "default")
    <!-- Skills End -->
    <!-- Service Start -->
    @Html.Action("partialService", "default")
    <!-- Service End -->
    <!-- Portfolio Start -->
    @Html.Action("partialProje", "default")
    <!-- Portfolio End -->
    <!-- Blog Start -->
    <!-- Blog End -->
    <!-- Testimonial Start -->
    @Html.Action("partialTestimonial", "default")
    <!-- Testimonial End -->
    <!-- Contact Start -->
    <div class="container-fluid" id="pigraContact">
        <div class="container">
            <div class="row g-0">
                @Html.Action("partialcontactsidebar", "contact")
                <div class="col-lg-9">
                    <div class="contact-content h-100 pt-6 ps-6 pb-6">
                        <div class="bg-light p-4">
                            <div class="row g-5">
                                @Html.Action("partialcontactaddress", "contact")
                                <div class="col-xl-7 wow fadeInUp" data-wow-delay="0.3s">
                                    <div>
                                        <form method="post">
                                            <div class="row g-3">
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control border-0" id="name" placeholder="Adınız soyadınız" name="name">
                                                        <label for="name">Adınız</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="email" class="form-control border-0" id="email" placeholder="Email adresiniz" name="email">
                                                        <label for="email">Email Adresi</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        <input type="phone" class="form-control border-0" id="phone" placeholder="Telefon numaranız" name="phonenumber">
                                                        <label for="phone">Telefon numarası</label>
                                                    </div>
                                                </div>
                                                <div class="col-lg-12 col-xl-6">
                                                    <div class="form-floating">
                                                        @Html.DropDownListFor(x => x.categoryid, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
                                                        <label for="project">konu</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <input type="text" class="form-control border-0" id="subject" placeholder="Konunuz" name="subject">
                                                        <label for="subject">Konu</label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating">
                                                        <textarea class="form-control border-0" placeholder="Leave a message here" id="mesaj detayı..." name="detail" style="height: 120px"></textarea>
                                                        <label for="message">Mesajınız</label>
                                                    </div>

                                                </div>
                                                <div class="col-12">
                                                    <button class="btn btn-primary w-100 py-3">Mesajı Gönder</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                @Html.Action("partialcontactlocation", "contact")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->
    <!-- Footer Start -->
    @Html.Action("partialsocialmedia", "default")
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary btn-lg-square back-to-top"><i class="fa fa-arrow-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/Content/Pigra-1.0.0/lib/wow/wow.min.js"></script>
    <script src="/Content/Pigra-1.0.0/lib/easing/easing.min.js"></script>
    <script src="/Content/Pigra-1.0.0/lib/waypoints/waypoints.min.js"></script>
    <script src="/Content/Pigra-1.0.0/lib/counterup/counterup.min.js"></script>
    <script src="/Content/Pigra-1.0.0/lib/lightbox/js/lightbox.min.js"></script>
    <script src="/Content/Pigra-1.0.0/lib/owlcarousel/owl.carousel.min.js"></script>
    <!-- Template Javascript -->
    <script src="/Content/Pigra-1.0.0/js/main.js"></script>
</body>

</html>
