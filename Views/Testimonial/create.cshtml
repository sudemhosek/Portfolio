@model Proje1Portfolio.Models.Testimonial
@{
    ViewBag.Title = "create";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4"> Yeni Hizmet girişi</h2>

<form method="post">

    <label>İsim-Soyad</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />

    <label>Resim</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />

    <label>Ünvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    <label>Yorum</label>
    @Html.TextAreaFor(x => x.Comment, 6, 0, new { @class = "form-control" })
    <br />



    <button class="btn btn-info">Yeni Deneyim oluştur</button>


</form>

