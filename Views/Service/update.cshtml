@model Proje1Portfolio.Models.Service
@{
    ViewBag.Title = "update";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4"> Hizmeti Güncelle</h2>

<form method="post">

    @Html.HiddenFor(x => x.Serviceid, new { @class = "form-control" })
    <br />

    <label>Ünvan</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    <label>İş Tarihi</label>
    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    <br />

    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.Description, 6, 0, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Güncelle</button>


</form>
